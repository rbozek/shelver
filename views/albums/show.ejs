<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h2>album detail</h2>

<section>
  <div>Title: </div>
  <div><%= album.title %></div>
  <div>Artist: </div>
  <div><%= album.artist %></div>
  <div>Release year: </div>
  <div><%= album.releaseYear %></div>
  <div>Record label: </div>
  <div><%= album.recordLabel %></div>
  <div>Added by: </div>
  <div><%= album.owner.name %></div>
  
</section>

<!-- display for logged-in user only -->
<% if (user) { %>
  <form action="/albums/<%= album._id %>/edit" method="GET">
    <!-- hard to see but there's a pencil emoji in there: -->
    <button type="submit"><h3>✏️</h3></button>
  </form>
  <% } %>
  
  <!-- display for album owner only -->
<% if (album.owner.equals(user?.profile._id)) { %>
<form 
  action="/albums/<%= album._id %>?_method=DELETE" 
  method="POST"
>
  <button type="submit"><h3>🗑️</h3></button>
</form>
<% } %>

<h2>Reviews</h2>
<% if (user) { %>
  <h3>Add a review</h3>
  <form
  id="form-temp-name" 
  action="/albums/<%= album._id %>/reviews"
  method="POST"
  >
    <label for="review-input">Review:</label>
    <textarea name="content" id="review-input" placeholder="Your review goes here"></textarea><br>

    <label for="rating-input">Rating:</label>
    <select name="rating" id="rating-input">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select><br>

    <button type="submit">Add Review</button>
  </form>
<% } %>



</main>

<%- include('../partials/footer') %>