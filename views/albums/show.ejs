<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h2>album detail</h2>

<section>
  <div>Title: </div>
  <div><%= album.title %></div>
  <div>Artist: </div>
  <div><%= album.artist %></div>
  <div>Release year: </div>
  <div><%= album.releaseYear %></div>
  <div>Record label: </div>
  <div><%= album.recordLabel %></div>
  <div>Added by: </div>
  <div><%= album.owner.name %></div>
  
</section>

<!-- hard to see but there's a pencil emoji in there: -->
<form action="/albums/<%= album._id %>/edit" method="GET">
  <button type="submit"><h3>✏️</h3></button>
</form>

<form 
  action="/albums/<%= album._id %>?_method=DELETE" 
  method="POST"
>
  <button type="submit"><h3>🗑️</h3></button>
</form>


</main>

<%- include('../partials/footer') %>